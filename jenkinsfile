pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
               git branch: 'main', credentialsId: 'krish', url: 'https://github.com/krishnarju/onlyme.git'
            }
        }
        stage('build') {
            steps {
               sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Nexux') {
            steps {
               nexusArtifactUploader artifacts: [
                   [
                        artifactId: 'spring-petclinic',
                        classifier: '', 
                        file: 'target/spring-petclinic-2.1.1.BUILD-SNAPSHOT.jar', 
                        type: 'jar'
               ]
             ], 
             credentialsId: 'nexux', 
             groupId: 'org.springframework.samples', 
             nexusUrl: '3.231.162.26:8081', 
             nexusVersion: 'nexus3',
             protocol: 'http', 
             repository: 'http://3.231.162.26:8081/repository/onlyme-release',
             version: 'spring-petclinic-2.1.1.BUILD-SNAPSHOT.jar'
            }
        }
        
                      
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
